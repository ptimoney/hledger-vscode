{
	"compilerOptions": {
		"target": "ES2020",
		"module": "commonjs",
		"lib": ["ES2020"],
		"outDir": "./out",
		"rootDir": "./src",
		"sourceMap": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"resolveJsonModule": true,
		"declaration": true,
		"declarationMap": true,
		"moduleResolution": "node",
		"types": ["node", "vscode", "mocha"]
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"node_modules",
		"out"
	]
}
